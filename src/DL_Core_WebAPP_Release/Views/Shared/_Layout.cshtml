<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Digital Library - @ViewBag.Page</title>
    @*<link href="~/node_modules/bootstrap/dist/css/bootstrap-simplex.min.css" rel="stylesheet" />*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.6/simplex/bootstrap.min.css" rel="stylesheet" >
    <style type="text/css">
        body {
            padding-top: 70px;
            padding-bottom: 30px;
            background-color: beige;
        }

        .navbar-brand {
            padding: 0px 15px;
        }

        .container {
            width: 90%;
            padding-left: 10px;
        }
    </style>
</head>
<body>
    <nav id="myNavbar" class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-controller="Library" asp-action="index">
                    <img style="float:left" alt="Library" src="/images/library-icon.png" height="36" width="36">
                    Digital Library
                </a>

            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a asp-controller="Home">Home</a></li>
                    <li><a asp-action="DisplayViewCart" asp-controller="Library">ViewCart</a></li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            @{
                string msg = TempData["MSG"] as string;
                if (msg != null)
                {
                    <div class="alert alert-warning">
                        <span>@msg</span>
                    </div>
                }
            }

            @RenderBody()


        </div>
        <div class="row nav navbar-inverse navbar-fixed-bottom">
            <div class="col-xs-12">
                <footer class="text-center text-info">
                    <p>&copy; KC</p>
                </footer>
            </div>
        </div>
    </div>
    @RenderSection("Scripts", false)
</body>

</html>