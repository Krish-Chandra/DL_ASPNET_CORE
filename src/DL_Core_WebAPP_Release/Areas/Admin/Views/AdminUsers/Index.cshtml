@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@model IEnumerable<IdentityUser>

@{
    ViewBag.Title = "Index";
}

<div>
    @Html.ActionLink("Add User", "Create", new { }, new { @class = "btn btn-success" })
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        Admin Users
    </div>
    <div class="panel-body">
        @if (Model.Count() > 0)
        {
            <table class="table">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Role
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @await Component.InvokeAsync("RoleForUser", new { user = item })
                        </td>


                        <td>
                            @Html.ActionLink("", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit" })
                            @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove" })

                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <div class="alert alert-danger">
                No roles defined in the system!
            </div>

        }
    </div>
</div>