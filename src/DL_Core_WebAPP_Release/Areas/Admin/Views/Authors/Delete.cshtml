@model DL_Core_WebAPP_Release.Models.Author

@{
    ViewBag.Title = "Delete";
}

<div style="width:700px;">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <b>Are you sure you want to delete this Author?</b>
        </div>
        <div class="panel-body">
            <div>
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Model.Name
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>

                    <dd>
                        @Model.Address
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.City)
                    </dt>

                    <dd>
                        @Model.City
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.State)
                    </dt>

                    <dd>
                        @Model.State
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.PinCode)
                    </dt>

                    <dd>
                        @Model.PinCode
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>

                    <dd>
                        @Model.Email
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Phone)
                    </dt>

                    <dd>
                        @Model.Phone
                    </dd>
                </dl>
            </div>
            <div>
                <form asp-action="Delete" asp-route-id="@Model.AuthorID" method="post" asp-antiforgery="true">
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-warning">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
