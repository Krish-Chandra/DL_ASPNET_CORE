<div>
    @*@Html.ActionLink("Add Book", "Create", new { }, new { @class = "btn btn-success" })*@
    <a asp-action="Create" class="btn btn-success">Add Book</a>
</div>
<div class="panel panel-primary">
    <div class="panel-heading">
        Books Catalog
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    @*@Html.DisplayNameFor(model => model.Title)*@
                    <label>Title</label>
                </th>

                <th>
                    @*@Html.DisplayNameFor(model => model.Author.Name)*@
                    <label>Author</label>
                </th>
                <th>
                    @*            @Html.DisplayNameFor(model => model.Publisher)*@
                    @*@Html.DisplayNameFor(model => model.Publisher.Name)*@
                    <label>Publisher</label>
                </th>

                <th>
                    @*@Html.DisplayNameFor(model => model.Category.Name)*@
                    <label>Category</label>
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.ISBN)*@
                    <label>ISBN</label>
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.TotalCopies)*@
                    <label>Total Copies</label>
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.AvailableCopies)*@
                    <label>Available Copies</label>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Author.Name)
                    </td>
                    <td>
                        @*                @Html.DisplayFor(modelItem => item.Publisher)*@
                        @Html.DisplayFor(modelItem => item.Publisher.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ISBN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalCopies)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvailableCopies)
                    </td>
                    <td>
                        @*@Html.ActionLink("", "Edit", new { id = item.BookId }, new { @class = "glyphicon glyphicon-edit" })*@
                        <a asp-action="Edit" asp-route-id="@item.BookId" class="glyphicon glyphicon-edit" title="Edit the book"></a>

                        @*@Html.ActionLink("", "Delete", new { id = item.BookId }, new { @class = "glyphicon glyphicon-remove" })*@
                        <a asp-action="Delete" asp-route-id="@item.BookId" class="glyphicon glyphicon-remove" title="Delete the book"></a>

                        @*@Html.ActionLink("Edit", "Edit", new { id = item.BookId }, new { @class = "btn btn-link" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.BookId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.BookId })*@
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
